#macro(sideMenu)
<script type="text/javascript">
    let ws = new WebSocket("ws://" + location.hostname + ":" + location.port + "/notifications");
    ws.onopen = () => ws.send("Connected!");
    let i = 0;
    ws.onmessage = msg => {
        let color = "#E8E8E8";
        if(i%2===0){
            color = "#DCDCDC";
        }
        document.getElementById("realTime").innerHTML += '<div style="background-color:' + color +'"> <p>'+msg.data+'</p></div>';
        i++;
    }
</script>
<div id="nav-container">
    <div class="bg"></div>
    <div class="button" tabindex="0">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </div>
    <div id="nav-content" tabindex="0">
        <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/productSearch">Search products</a></li>
            #if($isLoggedIn)
                <li><a href="/openStore">Open store</a></li>
                <li><a href="/manageStoreInventory">Manage store inventory</a></li>
                <li><a href="/logout">Logout</a></li>
            #end
            #if($isLoggedOut)
                <li><a href="/register">Register</a></li>
                <li><a href="/login">Login</a></li>
            #end
            <li id="realTime" class="notifications"><h2>Real time notifications:</h2><p></p></li>
        </ul>
    </div>
</div>
#end